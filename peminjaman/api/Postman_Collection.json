{
  "info": {
    "name": "Sistem Peminjaman Fasilitas - PHP API",
    "description": "Collection untuk testing API Backend PHP",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost/peminjaman/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"token\", jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@kampus.ac.id\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Me",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/me",
              "host": ["{{base_url}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Facilities",
      "item": [
        {
          "name": "List Facilities",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/facilities",
              "host": ["{{base_url}}"],
              "path": ["facilities"]
            }
          }
        },
        {
          "name": "List Facilities (Filter by Type)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/facilities?type=Kelas",
              "host": ["{{base_url}}"],
              "path": ["facilities"],
              "query": [
                {
                  "key": "type",
                  "value": "Kelas"
                }
              ]
            }
          }
        },
        {
          "name": "Get Facility Detail",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/facilities/1",
              "host": ["{{base_url}}"],
              "path": ["facilities", "1"]
            }
          }
        },
        {
          "name": "Create Facility (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Kelas 501\",\n  \"type\": \"Kelas\",\n  \"capacity\": 40,\n  \"location\": \"Gedung Utama Lantai 5\",\n  \"features\": [\"Proyektor\", \"AC\", \"Whiteboard\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/facilities",
              "host": ["{{base_url}}"],
              "path": ["facilities"]
            }
          }
        },
        {
          "name": "Update Facility (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"capacity\": 50\n}"
            },
            "url": {
              "raw": "{{base_url}}/facilities/1",
              "host": ["{{base_url}}"],
              "path": ["facilities", "1"]
            }
          }
        },
        {
          "name": "Delete Facility (Admin)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/facilities/23",
              "host": ["{{base_url}}"],
              "path": ["facilities", "23"]
            }
          }
        }
      ]
    },
    {
      "name": "Loans",
      "item": [
        {
          "name": "List Loans",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/loans",
              "host": ["{{base_url}}"],
              "path": ["loans"]
            }
          }
        },
        {
          "name": "List Loans (Filter by Status)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/loans?status=pending",
              "host": ["{{base_url}}"],
              "path": ["loans"],
              "query": [
                {
                  "key": "status",
                  "value": "pending"
                }
              ]
            }
          }
        },
        {
          "name": "Get Loan Detail",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/loans/1",
              "host": ["{{base_url}}"],
              "path": ["loans", "1"]
            }
          }
        },
        {
          "name": "Create Loan",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"unit\": \"Fakultas Teknik\",\n  \"purpose\": \"Seminar Workshop AI\",\n  \"start_date\": \"2025-10-30\",\n  \"end_date\": \"2025-10-30\",\n  \"start_time\": \"09:00\",\n  \"end_time\": \"16:00\",\n  \"room_type\": \"Kelas\",\n  \"participants\": 50,\n  \"notes\": \"Memerlukan proyektor\",\n  \"facilities\": [1, 2]\n}"
            },
            "url": {
              "raw": "{{base_url}}/loans",
              "host": ["{{base_url}}"],
              "path": ["loans"]
            }
          }
        },
        {
          "name": "Update Loan Status (Admin/Staff)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"approved\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/loans/1/status",
              "host": ["{{base_url}}"],
              "path": ["loans", "1", "status"]
            }
          }
        },
        {
          "name": "Delete Loan",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/loans/4",
              "host": ["{{base_url}}"],
              "path": ["loans", "4"]
            }
          }
        }
      ]
    },
    {
      "name": "Comments",
      "item": [
        {
          "name": "List Comments",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/comments/1",
              "host": ["{{base_url}}"],
              "path": ["comments", "1"]
            }
          }
        },
        {
          "name": "Create Comment (with text only)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "comment",
                  "value": "Fasilitas dalam kondisi baik, sudah dikembalikan dengan lengkap",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/comments/1",
              "host": ["{{base_url}}"],
              "path": ["comments", "1"]
            }
          }
        },
        {
          "name": "Mark as Returned (Admin/Staff)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/comments/1/mark-returned",
              "host": ["{{base_url}}"],
              "path": ["comments", "1", "mark-returned"]
            }
          }
        }
      ]
    },
    {
      "name": "Reports",
      "item": [
